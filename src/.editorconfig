; EditorConfig to support per-solution formatting.
; Use the EditorConfig VS add-in to make this work.
; http://editorconfig.org/

root = true

[*]
end_of_line = CRLF
indent_style = space
indent_size = 4

[*.{config,xml,cs}]
trim_trailing_whitespace = true

[*.{proj,props,sln,targets}]
indent_style = tab
trim_trailing_whitespace = true

[*.{csproj,json,ps1,psd1,psm1,resx}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true